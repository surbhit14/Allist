<%- include("header") %>
    <link rel="stylesheet" href="/css/login.css">
<div class="login-box" ng-app="myapp" ng-controller="ctrl">
  <h1>Sign Up</h1>

  <form action="/register" method="POST">
  <div class="textbox">
    <i class="fas fa-envelope"></i>
    <input type="text" placeholder="Email" name="username" >
  </div>

  <div class="textbox">
    <i class="fas fa-wallet"></i>
    <input type="text" placeholder="walletAddress" name="wallet" >
  </div>

  <div class="textbox">
    <i class="fas fa-lock"></i>
    <input type="password" placeholder="Password" name="password" >
  </div>

  <button type="submit" class="lbtn">SignUp</button>
</form>
</div>


